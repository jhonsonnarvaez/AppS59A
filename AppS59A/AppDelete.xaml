<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS59A.AppDelete"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblNombre"/>
            <Label x:Name="lblApellido"/>
            <Label x:Name="lblEdad"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Text="Eliminar"
                        x:Name="btnEliminar"
                        Clicked="btnEliminar_Clicked"
                        ></Button>
                <Button Grid.Row="0" Grid.Column="1" Text="Regresar"
                        x:Name="btnRegresar"
                        Clicked="btnRegresar_Clicked"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>